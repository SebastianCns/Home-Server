@page "/"

@inject Home_Server.Data.UserService userService;

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name!</h1>
    </Authorized>
    <NotAuthorized>
        <h1>Hello, Guest</h1>
    </NotAuthorized>
</AuthorizeView>

@code{
    /*Author: SebastianCns Date: 25.01.23
    *
    *Description:
    *
    *
    */

    protected override void OnInitialized()
    {
        userService.Init(); // Init to get the user data from database
        base.OnInitialized();
    }


}
